[Unit]
Description=Wazuh manager
Wants=network-online.target
After=network.target network-online.target

[Service]
Type=forking
LimitNOFILE=65536

ExecStart=/usr/bin/env WAZUH_HOME/bin/wazuh-control start
ExecStop=/usr/bin/env WAZUH_HOME/bin/wazuh-control stop
ExecReload=/usr/bin/env WAZUH_HOME/bin/wazuh-control reload
KillMode=none
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
